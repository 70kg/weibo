<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
 <LinearLayout
        android:id="@+id/current_weibo"
        android:layout_width="fill_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/current_weibo_user_pic"
                android:layout_width="50dp"
                android:layout_height="50dp" />

            <TextView
                android:id="@+id/current_weibo_user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <TextView
            android:id="@+id/current_weibo_content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/current_weibo2_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/popup"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/current_weibo2_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/current_weibo2_pic_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/current_weibo2_pic_1_1"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/current_weibo2_pic_1_2"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="5dp"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/current_weibo2_pic_1_3"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="5dp"
                        android:visibility="gone" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/current_weibo2_pic_2_1"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/current_weibo2_pic_2_2"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="5dp"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/current_weibo2_pic_2_3"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="5dp"
                        android:visibility="gone" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/current_weibo2_pic_3_1"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/current_weibo2_pic_3_2"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="5dp"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/current_weibo2_pic_3_3"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="5dp"
                        android:visibility="gone" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
